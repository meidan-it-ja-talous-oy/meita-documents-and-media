{
    "$schema": "https://json.schemastore.org/block.json",
    "apiVersion": 3,
    "version": "development",
    "name": "meita-documents-and-media/show-bucket",
    "title": "Dokumentit ja media - Google Bucket",
    "category": "widgets",
    "icon": "media-default",
    "description": "Plugin that shows Google bucket files",
    "textdomain": "meita-documents-and-media",
    "supports": {
        "html": false,
        "spacing": {
            "margin": [
                "top",
                "bottom",
                "left",
                "right"
            ],
            "padding": true
        },
        "color": {
            "background": true,
            "text": true
        }
    },
    "editorScript": "file:../../blocks/show-bucket/index.js",
    "editorStyle": "file:../../blocks/show-bucket/index.css",
    "style": "file:../../blocks/show-bucket/style-index.css",
    "viewScript": "file:../../js/filter-script.js",
    "attributes": {
        "allFiles": {
            "type": "array",
            "default": []
        },
        "selectedFiles": {
            "type": "array",
            "default": []
        },
        "selectedFilesSTR": {
            "type": "string",
            "default": ""
        },
        "files": {
            "type": "array",
            "default": []
        },
        "checked": {
            "type": "array",
            "default": []
        },
        "filter": {
            "type": "string",
            "default": ""
        },
        "datasource": {
            "type": "string",
            "default": "google"
        },
        "datasourceURL": {
            "type": "string",
            "default": ""
        },
        "showIcon": {
            "type": "boolean",
            "default": true
        },
        "showDate": {
            "type": "boolean",
            "default": true
        },
        "showDescription": {
            "type": "boolean",
            "default": true
        },
        "showDownloadLink": {
            "type": "boolean",
            "default": true
        },
        "orderBy": {
            "type": "string",
            "default": "title"
        },
        "order": {
            "type": "string",
            "default": "ascending"
        },
        "selectclicked": {
            "type": "boolean",
            "default": false
        },
        "selectedFolder": {
            "type": "string",
            "default": ""
        },
        "selectedAttachments": {
            "type": "array",
            "default": []
        },
        "wpSelect": {
            "type": "string",
            "default": "files"
        },
        "listScreen": {
            "type": "boolean",
            "default": false
        },
        "istrue": {
            "type": "boolean",
            "default": true
        },
        "range": {
            "type": "number",
            "default": 5
        },
        "currentPage": {
            "type": "number",
            "default": 0
        },
        "totalPages": {
            "type": "number",
            "default": 0
        },
        "blockId": {
            "type": "string",
            "selector": "div",
            "attribute": "id",
            "source": "attribute",
            "default": ""
        },
        "searchlabel": {
            "type": "string",
            "default": ""
        },
        "searchbuttonlabel": {
            "type": "string",
            "selector": "button",
            "source": "text",
            "default": "Search"
        },
        "showButtonIcon": {
            "type": "boolean",
            "default": false
        },
        "showLabel": {
            "type": "boolean",
            "default": true
        }
    }
}